<div class="row">
    <div class="col-md-4">
        <form method="post" action="/account/register">
            <h3 class="title-divider">
                <span>Register</span>
                <small>Already registered? <a href="/account/login">Login here</a>.</small>
            </h3>
            <hr/>

            <% if (errors && errors.length > 0){ %>
                <div class="alert alert-danger">
                    <ul>
                        <% for (var i = 0; i < errors.length; i++) { %>
                            <li><%= errors[i].msg %></li>
                        <% } %>
                    </ul>
                </div>
            <% } %>

            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" name="username" placeholder="john">
                <p class="help-block">Must be alphanumeric</p>
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" name="email" placeholder="john@doe.com">
                <p class="help-block">Must be a valid email address</p>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" placeholder="secret">
            </div>
            <div class="form-group">
                <label for="password">Repeat password</label>
                <input type="password" class="form-control" name="repeatpassword" placeholder="secret">
                <p class="help-block">Must match the password field above</p>
            </div>

            <br>

            <button class="btn btn-primary" type="submit">Register</button>
        </form>
    </div>
</div>